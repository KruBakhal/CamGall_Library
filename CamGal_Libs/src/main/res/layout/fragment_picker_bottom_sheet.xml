<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_picker"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:context=".Picker.PickerBottomSheetFragment">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="right"
        android:src="@drawable/ic_baseline_close"
        app:tint="@color/black" />

    <Button
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserratbold700"
        android:padding="@dimen/_10sdp"
        android:text="@string/str_camera"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="@dimen/_14sdp" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserratbold700"
        android:padding="@dimen/_10sdp"
        android:text="@string/str_gallery"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toTopOf="@+id/creation" />

    <Button
        android:id="@+id/creation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserratbold700"
        android:padding="@dimen/_10sdp"
        android:text="@string/str_creation"
        android:textColor="@color/black"
        android:textFontWeight="500"

        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toTopOf="@+id/setting" />

    <Button
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserratbold700"
        android:padding="@dimen/_10sdp"
        android:text="@string/str_setting"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="@dimen/_14sdp" />

</LinearLayout>